# ============================================================================
# TechZone Inventory System - Environment Configuration Template
# ============================================================================
# This file contains all environment variables needed for the application
# 
# IMPORTANT: 
# 1. Copy this file and rename to .env
# 2. Fill in your actual values
# 3. NEVER commit .env to version control
# 4. Add .env to .gitignore
#
# ============================================================================

# ============================================================================
# MONGODB CONFIGURATION
# ============================================================================
# Connection string to MongoDB Atlas or local MongoDB instance
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name

MONGODB_URI=mongodb+srv://techzone_user:YOUR_PASSWORD_HERE@techzone-cluster.mongodb.net/TechZoneMongo?retryWrites=true&w=majority

# Database Name
DB_NAME=TechZoneMongo

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Port on which the server will listen
PORT=3000

# Environment mode (development, staging, production)
NODE_ENV=development

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins for frontend requests
# Separate multiple URLs with comma
# Example: http://localhost:3000,http://localhost:8000,https://yourdomain.com

CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================
# JWT secret key for token signing (use a strong, random string)
# Generate with: openssl rand -base64 32

JWT_SECRET=your_super_secret_jwt_key_here_generate_strong_random_string

# JWT token expiration (e.g., 24h, 7d, 30d)
JWT_EXPIRY=7d

# Refresh token expiration
REFRESH_TOKEN_EXPIRY=30d

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file location
LOG_DIR=./logs

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
# Session timeout in milliseconds (1 hour = 3600000)
SESSION_TIMEOUT=3600000

# ============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================================
# SMTP Server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email sender address
EMAIL_FROM=noreply@techzone-inventory.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_INVENTORY_TRACKING=true
ENABLE_CUSTOMER_SEGMENTATION=true
ENABLE_NOTIFICATIONS=false

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Enable automatic backups
ENABLE_BACKUPS=true

# Backup directory
BACKUP_DIR=./backups

# Backup frequency in hours
BACKUP_FREQUENCY=24

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
# Database connection pool size
DB_POOL_SIZE=10

# Max query timeout in milliseconds
QUERY_TIMEOUT=30000

# Enable query caching
ENABLE_CACHING=true

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION (Optional)
# ============================================================================
# Stripe API Key
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here

# PayPal Client ID
PAYPAL_CLIENT_ID=your_paypal_client_id

# ============================================================================
# REPORTING CONFIGURATION
# ============================================================================
# Enable automated reports
ENABLE_DAILY_REPORTS=true
ENABLE_WEEKLY_REPORTS=true
ENABLE_MONTHLY_REPORTS=true

# Report email recipients (comma-separated)
REPORT_RECIPIENTS=admin@techzone-inventory.com,manager@techzone-inventory.com

# ============================================================================
# AWS S3 CONFIGURATION (Optional - for file storage)
# ============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=techzone-inventory-files

# ============================================================================
# TWILIO CONFIGURATION (Optional - for SMS notifications)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# ANALYTICS CONFIGURATION
# ============================================================================
# Google Analytics ID
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Enable segment tracking
ENABLE_SEGMENT_TRACKING=false
SEGMENT_WRITE_KEY=your_segment_write_key

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# HTTPS enabled
HTTPS_ENABLED=false

# SSL Certificate path (for production HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your_cert.pem
SSL_KEY_PATH=/etc/ssl/private/your_key.pem

# Allowed IP addresses (comma-separated, leave empty for all)
ALLOWED_IPS=

# ============================================================================
# DEBUG CONFIGURATION
# ============================================================================
# Enable debug mode (shows more detailed error messages)
DEBUG=true

# Show database queries in logs
SHOW_DB_QUERIES=true

# Enable API request/response logging
API_LOGGING=true

# ============================================================================
# NOTES FOR SETUP
# ============================================================================

# 1. MONGODB_URI
#    1a. For local MongoDB:
#        mongodb://localhost:27017/TechZoneMongo
#    
#    1b. For MongoDB Atlas:
#        a) Create account at https://www.mongodb.com/cloud/atlas
#        b) Create cluster and database user
#        c) Get connection string from Atlas dashboard
#        d) Replace username, password, and cluster address

# 2. JWT_SECRET
#    Generate a secure key with:
#    - Linux/Mac: openssl rand -base64 32
#    - Windows: Use online generator or PowerShell
#    - Never use default values in production!

# 3. CORS_ORIGIN
#    - Development: http://localhost:3000,http://localhost:8000
#    - Production: https://yourdomain.com,https://www.yourdomain.com
#    - Allow all (not recommended): *

# 4. RATE_LIMIT_MAX_REQUESTS
#    - Development: 1000
#    - Production: 100

# 5. For production deployment:
#    - Set NODE_ENV=production
#    - Use strong, randomly generated secrets
#    - Enable HTTPS_ENABLED=true
#    - Disable DEBUG=false
#    - Set up proper logging and monitoring

# ============================================================================
